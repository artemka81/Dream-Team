
.header-user
	.header-user__content
		.header-user__mobile-bar(id="navigation-toggle")
			.header-user__mobile-toggle
				+icon('nav', 'nav-mod')
			.header-user__mobile-close
				+icon('close', 'close-mod')
			p Открыть навигацию
		.header-user__logo-brand
			.header-user__logo
				a(href="index.html")
					+icon('plane', 'plane-mod')
			a.header-user__brand(href="index.html")
				.header-user__brandname
					h1 Digital Lyfestyle
				.header-user__brand-desc
					p Сайт IT специалиста
		.header-user__nav-box(id="navigation-menu")
			+header-menu("menu-admin")
	