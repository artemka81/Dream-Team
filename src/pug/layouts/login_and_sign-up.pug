body(class=pageClass)
	.login-page__container
			.login-page__header
				.header-user__logo-brand
					.header-user__logo
						a(href="index.html")
							+icon('plane', 'plane-mod')
					a.header-user__brand(href="index.html")
						.header-user__brandname
							h1 Digital Lyfestyle
				.header-user__signup-form
								form(action=top_menu_action)
									button #{top_menu_name}

			.login-page__form-container
				form(action=form_action).form-container
					.form-title #{form_title}
					.error-massages#error-massages
						block errors						
					.form-fields
						block fields
					block add-info
					block submit-button
