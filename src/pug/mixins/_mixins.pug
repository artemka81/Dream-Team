//- header-menu
//-------------
mixin header-menu(navClass)
	if(navClass === 'header-user__nav')
		nav(Class=navClass)
			ul
				each link in menu.user
					li
						a(href=link.href)=link.linkName
	else
		.menu-admin
			.tab-profile
				+avatar('small','/img/avatar-img/photo-small.jpg','Админ')
				.tab-profile__name Юрий Ключевский
				+btn('#','admin', 'Администратор')
			.tab-wrap
				input(type="radio" name="tabs" id="tab1" checked)
				.tab-label-content#tab1-content
					label(for="tab1") Страницы
					nav.header-user__nav
						+menu(menu.user)
				input(type="radio" name="tabs" id="tab2")
				.tab-label-content#tab2-content
					label(for="tab2") Админка
					nav(Class=navClass)
						+menu-admin(menu.admin)
						




//-footer-menu
//------------
mixin menu(menu)
	ul.menu
		each link in menu
			li
				a(href=link.href)=link.linkName

mixin menu-admin(menu)
	ul
		each item in menu
			li
				i(class="fas fa-" +item.classIcon)
				a(href=item.href)=item.linkName


mixin comment-info(avatar,user_name,date,text)
	.comment
		+avatar('small comment__avatar',avatar,user_name)
		
		.comment__info__user_date
			.comment__user_name #{user_name}
			.time_container
				i.far.fa-clock
				.comment__date #{date}
		.comment__text #{text}
			


